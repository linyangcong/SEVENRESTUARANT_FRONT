 */
.uni-drawer.data-v-79431821 {

		display: block;

		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		overflow: hidden;
		z-index: 998;
}
.uni-drawer__content.data-v-79431821 {

		display: block;

		position: absolute;
		top: 0;
		width: 90%;
		bottom: 0;
		background-color: #ffffff;
		-webkit-transition: -webkit-transform 0.3s ease;
		transition: -webkit-transform 0.3s ease;
		transition: transform 0.3s ease;
		transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.uni-drawer--left.data-v-79431821 {
		left: 0;
		-webkit-transform: translateX(-90%);
		        transform: translateX(-90%);
}
.uni-drawer--right.data-v-79431821 {
		right: 0;
		-webkit-transform: translateX(-90%);
		        transform: translateX(-90%);
}
.uni-drawer__content--visible.data-v-79431821 {
		-webkit-transform: translateX(0px);
		        transform: translateX(0px);
}
.uni-drawer__mask.data-v-79431821 {

		display: block;

		opacity: 0;
		position: absolute;
		top: 0;
		left: 0;
		bottom: 0;
		right: 0;
		background-color: rgba(0, 0, 0, 0.4);
		-webkit-transition: opacity 0.3s;
		transition: opacity 0.3s;
}
.uni-drawer__mask--visible.data-v-79431821 {

		display: block;

		opacity: 1;
}

